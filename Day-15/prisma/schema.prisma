generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  dayNumber   Int      // Day-01, Day-02, etc.
  isCompleted Boolean  @default(false)
  githubUrl   String?  // Link to the specific day folder in GitHub
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, dayNumber])
}

model GlobalProgress {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  dayNumber   Int      @unique
  totalUsers  Int      @default(0)
  completedUsers Int   @default(0)
  inProgressUsers Int  @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
